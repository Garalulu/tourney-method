{
    "name": "tourney-method/app",
    "description": "Korean osu! tournament discovery platform",
    "type": "project",
    "license": "MIT",
    "require": {
        "php": "^8.1"
    },
    "require-dev": {
        "phpunit/phpunit": "^9.5"
    },
    "autoload": {
        "psr-4": {
            "TourneyMethod\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "TourneyMethod\\Tests\\": "tests/"
        }
    },
    "config": {
        "optimize-autoloader": true,
        "platform": {
            "php": "8.1"
        }
    },
    "scripts": {
        "test": "phpunit",
        "test-coverage": "phpunit --coverage-html coverage"
    }
}