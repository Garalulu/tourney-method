# osu! OAuth Configuration (User Authentication)
# Get these from https://osu.ppy.sh/home/account/edit#oauth
OSU_CLIENT_ID=your_client_id_here
OSU_CLIENT_SECRET=your_client_secret_here

# Database path (for development/production)
DB_PATH=/tmp/tournaments.db

# App Platform Environment Variables
APP_URL=https://tourney-method-xxxxx.ondigitalocean.app
TZ=Asia/Seoul

# Security (generate strong random values)
SESSION_SECRET=your_session_secret_here

# Optional: Admin user setup
ADMIN_OSU_ID=your_osu_user_id
ADMIN_USERNAME=your_osu_username